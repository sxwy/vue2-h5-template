{
  "name": "vue2-h5-template",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "serve:mock": "cross-env VUE_APP_ENV=mock npm run serve",
    "serve:alpha": "cross-env VUE_APP_ENV=alpha npm run serve",
    "serve:rc": "cross-env VUE_APP_ENV=rc npm run serve",
    "serve:prod": "cross-env VUE_APP_ENV=prod npm run serve",
    "build:mock": "cross-env VUE_APP_ENV=mock npm run build",
    "build:alpha": "cross-env VUE_APP_ENV=alpha npm run build",
    "build:rc": "cross-env VUE_APP_ENV=rc npm run build",
    "build:prod": "cross-env VUE_APP_ENV=prod npm run build",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint --ext .js,.ts,.vue ./src",
    "lint:css": "stylelint ./src/**/*.{css,less,sass,scss,vue}",
    "format": "npm run format:js && npm run format:css",
    "format:js": "eslint --fix --ext .js,.ts,.vue ./src",
    "format:css": "stylelint --fix --allow-empty-input ./src/**/*.{css,less,sass,scss,vue}",
    "prepare": "husky install",
    "pre-commit": "lint-staged"
  },
  "dependencies": {
    "axios": "^1.1.2",
    "core-js": "^3.6.5",
    "vant": "^2.12.50",
    "vconsole": "^3.15.0",
    "vue": "^2.6.11",
    "vue-router": "^3.2.0",
    "vuex": "^3.4.0",
    "vuex-persistedstate": "^4.1.0"
  },
  "devDependencies": {
    "@sxwy/commitlint-config": "^1.4.0",
    "@sxwy/eslint-config-vue": "^1.6.0",
    "@sxwy/prettier-config": "^1.5.0",
    "@sxwy/stylelint-config": "^1.7.0",
    "@vue/cli-plugin-babel": "~4.5.19",
    "@vue/cli-plugin-router": "~4.5.19",
    "@vue/cli-plugin-typescript": "~4.5.19",
    "@vue/cli-plugin-vuex": "~4.5.19",
    "@vue/cli-service": "~4.5.19",
    "cross-env": "^7.0.3",
    "eslint": "^8.25.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "mocker-api": "^2.9.8",
    "mockjs": "^1.1.0",
    "postcss": "^8.4.17",
    "postcss-px-to-viewport": "^1.1.1",
    "prettier": "^2.7.1",
    "sass": "^1.26.5",
    "sass-loader": "^8.0.2",
    "stylelint": "^14.13.0",
    "typescript": "~4.1.5",
    "vue-template-compiler": "^2.6.11"
  }
}
